@model Contact
@{
	ViewData["Title"] = "Delete confirmation";
}

<h1>Are you sure you want to delete this contact?</h1>

<form method="post" asp-controller="Contacts" asp-action="Delete" enctype="multipart/form-data">
	<input type="hidden" value="Id" id="Id" />
	<div class="form-group">
		<label asp-for="Name">Name</label>
		<input asp-for="Name" class="form-control" placeholder="Name" readonly />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="form-group mt-1">
		<label asp-for="BirthDate">Birth Date</label>
		<input asp-for="BirthDate" type="text" class="form-control" placeholder="Birth Date" value="@Model.BirthDate.ToString("MM-dd-yyyy")" readonly />
		<span asp-validation-for="BirthDate" class="text-danger"></span>
	</div>
	<div class="form-group mt-1">
		<label asp-for="Phone">Phone</label>
		<input asp-for="Phone" class="form-control" placeholder="Phone" readonly />
		<span asp-validation-for="Phone" class="text-danger"></span>
	</div>
	<div class="form-group mt-1">
		<label asp-for="Salary">Salary</label>
		<input asp-for="Salary" class="form-control" placeholder="Salary" readonly />
		<span asp-validation-for="Salary" class="text-danger"></span>
	</div>
	<div class="form-group mt-1">
		<label asp-for="IsMarried">Is Married</label>
		<input asp-for="IsMarried" class="form-check-input" type="checkbox" disabled />
		<span asp-validation-for="IsMarried" class="text-danger"></span>
	</div>
	<div class="form-group">
		<form action="Delete" method="post">
			<input type="hidden" asp-for="Id" />
			<input type="submit" value="Confirm" class="btn btn-danger mt-3" />
		</form>
	</div>
</form>